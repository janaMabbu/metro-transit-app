{
  "extends": "stylelint-config-standard",
  "rules": {
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "if",
        "include",
        "else",
        "mixin",
        "warn"
      ]
    }],
    "number-leading-zero": null,
    "unit-whitelist": ["px", "em", "rem", "%"]
  }
}